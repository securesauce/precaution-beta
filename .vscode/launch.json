{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest All",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": ["--runInBand"],
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Current File",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "args": ["${relativeFile}"],
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Probot debug",
            "program": "${workspaceFolder}/node_modules/probot/bin/probot-run.js",
            "args": [
                "./index.js"
            ]
        }
    ]
}