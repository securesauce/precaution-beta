{
  "name": "precaution",
  "version": "1.0.0",
  "description": "GitHub App for PR security linting",
  "author": "Martin Vrachev <martin.vrachev@gmail.com> (d)",
  "contributors": [
    {
      "name": "Antoine Salon",
      "url": "https://github.com/evqna"
    },
    {
      "name": "Martin Vrachev",
      "email": "mvrachev@vmware.com"
    }
  ],
  "license": "BSD-2",
  "repository": "https://github.com/vmware/precaution.git",
  "homepage": "https://github.com/vmware/precaution",
  "bugs": "https://github.com/vmware/precaution/issues",
  "keywords": [
    "github",
    "checks",
    "security",
    "lint"
  ],
  "scripts": {
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./index.js",
    "test": "standard && LOG_LEVEL=error jest",
    "test:watch": "LOG_LEVEL=error jest --watch --notify --notifyMode=change --coverage",
    "lint": "standard --fix"
  },
  "dependencies": {
    "fs-extra": "^7.0.0",
    "probot": "^7.4.0",
    "tslint": "^5.14.0",
    "typescript": "^3.3.4000",
    "tslint-config-security": "^1.15.0"
  },
  "devDependencies": {
    "jest": "^24.3.1",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^12.0.1",
    "ts-node": "^8.0.3"
  },
  "engines": {
    "node": ">= 11"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "test"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "standard": {
    "globals": [
      "jest",
      "test",
      "expect",
      "describe",
      "beforeAll",
      "beforeEach",
      "afterAll",
      "afterEach"
    ]
  },
  "main": "index.js",
  "directories": {
    "test": "test"
  }
}
